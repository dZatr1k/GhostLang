<Window x:Class="GhostLang.WPF.Windows.CaptureOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptureOverlayWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Top" Height="30" 
                       Background="#80FFFFFF"
                       MouseLeftButtonDown="Toolbar_MouseLeftButtonDown">
            
                <StackPanel Orientation="Horizontal" Margin="0,0">
                    <Button Content="Выйти" Margin="3" ToolTip="Кнопка 1" Width="50"/>
                    <Button Content="Нажать" Margin="3" ToolTip="Кнопка 2" Width="50"/>
                </StackPanel>
            </DockPanel>
        
            <Border BorderBrush="Green" BorderThickness="1" Background="Transparent" />
        </DockPanel>
    </Grid>
</Window>
