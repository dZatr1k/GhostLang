<Window x:Class="GhostLang.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GhostLang.WPF.ViewModels"
        xmlns:views="clr-namespace:GhostLang.WPF.Windows.Views"
        xmlns:models="clr-namespace:GhostLang.WPF.Models"
        Title="GhostLang" Height="500" Width="900" 
        Topmost="True">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainWindowViewModel}">
            <views:TranslatorView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:GeneralSettingsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TesseractSettingsViewModelWrapper}">
            <views:TesseractSettingsView DataContext="{Binding RealSettings}"/>
        </DataTemplate>
        
        <HierarchicalDataTemplate DataType="{x:Type models:NavigationItem}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Title}" Margin="2"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> <ColumnDefinition Width="*"/>   </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <TreeView x:Name="MainMenu" ItemsSource="{Binding MenuItems}" SelectedItemChanged="MainMenu_SelectedItemChanged" BorderThickness="0" Background="Transparent" Margin="5">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                
                </TreeView>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>