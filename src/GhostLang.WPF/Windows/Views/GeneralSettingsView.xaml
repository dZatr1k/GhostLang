<UserControl x:Class="GhostLang.WPF.Windows.Views.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20">
        <TextBlock Text="Общие настройки" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Label Content="Интервал таймера (мс):"/>
        <TextBox Text="{Binding TimerIntervalMilliseconds, UpdateSourceTrigger=PropertyChanged}" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>