<Window x:Class="GhostLang.WPF.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Настройки" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Интервал таймера (мс):"/>
            <TextBox Text="{Binding TimerIntervalMilliseconds, UpdateSourceTrigger=PropertyChanged}" />
            
            <Button Content="Закрыть" Click="CloseButton_Click" Margin="0,20,0,0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>